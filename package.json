{
  "name": "express-typescript-tsoa-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate to build Express API REST quickly",
  "scripts": {
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "clean": "rimraf src/tsoa_generated coverage build tmp",
    "prebuild": "tsoa spec-and-routes && yarn lint:fix ",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --forceExit --detectOpenHandles",
    "test:integration": "jest --watchAll --testPathPattern=tests/integrations --forceExit",
    "test:unit": "jest --watchAll --testPathPattern=tests/units",
    "prepare:husky": "yarn husky install",
    "plop:module": "plop module",
    "ts:sequelize": "yarn ts-node ./node_modules/.bin/sequelize-cli",
    "make:migrations": "yarn ts:sequelize db:migrate",
    "undo:migrations": "yarn ts:sequelize db:migrate:undo",
    "make:seedings": "yarn ts:sequelize db:seed:all",
    "undo:seedings": "yarn ts:sequelize db:seed:undo:all"
  },
  "author": "Alberto Castillo",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/lodash": "^4.14.177",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.11",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@types/validator": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.13",
    "plop": "^2.7.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.3.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@tsoa/runtime": "^3.13.0",
    "@types/helmet": "^4.0.0",
    "D": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.34",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.12.0-alpha.1",
    "sequelize-typescript": "^2.1.1",
    "serialize-error": "^8.1.0",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.8.0",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  }
}
